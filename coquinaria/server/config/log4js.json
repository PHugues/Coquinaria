{
    "appenders": {
      "access": {
        "type": "dateFile",
        "filename": "coquinaria/server/log/access.log",
        "pattern": "-yyyy-MM-dd",
        "category": "http"
      },
      "app": {
        "type": "file",
        "filename": "coquinaria/server/log/app.log",
        "maxLogSize": 10485760,
        "numBackups": 3
      },
      "errorFile": {
        "type": "file",
        "filename": "coquinaria/server/log/errors.log"
      },
      "errors": {
        "type": "logLevelFilter",
        "level": "ERROR",
        "appender": "errorFile"
      },
      "request": {
        "type" : "file",
        "filename": "coquinaria/server/log/request.log"
      },
      "console": {
        "type": "console"
      }
    },
    "categories": {
      "default": { "appenders": [ "app", "errors", "console"], "level": "debug" },
      "http": { "appenders": [ "access", "console"], "level": "debug" },
      "request": { "appenders": [ "request", "console"], "level": "debug" }
    }
  }